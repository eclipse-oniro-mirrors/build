import("//build/templates/rust/rust_autocxx.gni")
import("//build/templates/rust/rust_template.gni")

rust_autocxx("autocxx_gen_bindings_pod") {
  visibility = [
    ":autocxx_rust_cxx_staticlib_pod",
    ":autocxx_rust_pod_exe",
  ]
  sources = [ "src/lib.rs" ]
  if (is_component_build) {
    export_symbols = true
  }
}

ohos_static_library("autocxx_rust_cxx_staticlib_pod") {
  ohos_all_sources = get_target_outputs(":autocxx_gen_bindings_pod")
  rs_sources = filter_exclude(ohos_all_sources, [ "*.rs" ])
  sources = rs_sources
  include_dirs = [
    "${target_gen_dir}",
    "//third_party/rust/cxx/v1/crate/include",
    "include",
  ]
  deps = [
    ":autocxx_gen_bindings_pod",
    "//build/rust:cxx_cppdeps",
  ]
}

ohos_rust_executable("autocxx_rust_pod_exe") {
  sources = [ "src/lib.rs" ]
  ohos_all_sources = get_target_outputs(":autocxx_gen_bindings_pod")
  rs_include_file = filter_include(ohos_all_sources, [ "*include.rs" ])
  rustenv = [ "AUTOCXX_RS_FILE=" + rebase_path(rs_include_file[0]) ]
  deps = [
    ":autocxx_rust_cxx_staticlib_pod",
    "//build/rust/tests/test_autocxx:autocxx_rustdeps",
  ]
}
