import("//build/ohos.gni")

rust_cxx("test_cxx_rust_gen") {
  sources = [ "src/main.rs" ]
}

ohos_static_library("test_cxx_rust_staticlib") {
  sources = [ "src/client_blobstore.cpp" ]
  sources += get_target_outputs(":test_cxx_rust_gen")
  include_dirs = [
    "${target_gen_dir}/src",
    "//build/rust/tests/test_cxx_rust/include",
    "//third_party/rust/crates/cxx/include",
  ]
  deps = [
    ":test_cxx_rust_gen",
    "//third_party/rust/crates/cxx:cxx_cppdeps",
  ]
}

ohos_rust_executable("test_cxx_rust") {
  sources = [ "src/main.rs" ]
  deps = [
    ":test_cxx_rust_staticlib",
    "//third_party/rust/crates/cxx:lib",
  ]
}
